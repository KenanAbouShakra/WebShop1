@model WebShop1.Models.Product
@using WebShop1.Models

@{
    ViewBag.Title = $"{ViewBag.Operation} Menu Item";
    var categories = ViewBag.Categories as IEnumerable<Category> ?? Enumerable.Empty<Category>();
    var ingredients = ViewBag.Ingredients as IEnumerable<Ingredient> ?? Enumerable.Empty<Ingredient>();
}

<h1>@ViewBag.Operation Menu Item</h1>

<form asp-action="AddEdit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProductId" />

    <div class="form-group mb-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Stock">Quantity in Stock</label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Upload Image</label>
        <input type="file" class="form-control" asp-for="ImageFile" />
    </div>

    <div class="row">
        <div class="col">
            <h5>Category</h5>
            @foreach (var category in categories)
            {
                <div class="form-check">
                    <input class="form-check-input"
                           type="radio"
                           name="CategoryId"
                           id="cat_@category.CategoryId"
                           value="@category.CategoryId"
                           @(Model.CategoryId == category.CategoryId ? "checked" : "") />

                    <label class="form-check-label" for="cat_@category.CategoryId">
                        @category.Name
                    </label>
                </div>
            }
        </div>

        <div class="col">
            <h5>Ingredients</h5>
            @foreach (var ingredient in ingredients)
            {
                var checkedIng =
                Model.ProductIngredients != null &&
                Model.ProductIngredients.Any(pi => pi.IngredientId == ingredient.IngredientId);

                <div class="form-check">
                    <input class="form-check-input"
                           type="checkbox"
                           name="ingredientIds"
                           id="ing_@ingredient.IngredientId"
                           value="@ingredient.IngredientId"
                           @(checkedIng ? "checked" : "") />

                    <label class="form-check-label" for="ing_@ingredient.IngredientId">
                        @ingredient.Name
                    </label>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-3">@ViewBag.Operation</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to list</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
