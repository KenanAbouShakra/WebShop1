@model IEnumerable<WebShop1.Models.Product>
@using System.Globalization

@functions {
    string FormatPrice(decimal price) =>
        price.ToString("N2", CultureInfo.GetCultureInfo("nb-NO")) + " kr";
}

<h2>Kenan Menu Items</h2>

<a asp-action="AddEdit" asp-controller="Product" asp-route-id="0" class="btn btn-primary">
    Create New Item
</a>

<div class="row g-3 mt-2">
    @foreach (var product in Model)
    {
        <div class="col-md-4 d-flex">
            <div class="card h-100 w-100 position-relative">

                <!-- Klikk på kortet => Details -->
                <a asp-controller="Product"
                   asp-action="Details"
                   asp-route-id="@product.ProductId"
                   class="stretched-link">
                </a>

                <img src="@Url.Content("~/images/" + (string.IsNullOrWhiteSpace(product.ImageUrl) ? "default.jpg" : product.ImageUrl))"
                     class="card-img-top product-img"
                     alt="@product.Description" />

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text flex-grow-1">@product.Description</p>

                    <p class="card-text fw-bold mb-1">@FormatPrice(product.Price)</p>
                    <p class="card-text mb-2">Quantity in Stock: @product.Stock</p>

                    <!-- Viktig: disse må være "over" stretched-link -->
                    <div class="mt-auto d-flex gap-2 position-relative" style="z-index: 2;">
                        <a class="btn btn-sm btn-warning"
                           asp-action="AddEdit"
                           asp-route-id="@product.ProductId">Edit</a>

                        <a class="btn btn-sm btn-danger"
                           asp-action="Delete"
                           asp-route-id="@product.ProductId">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
