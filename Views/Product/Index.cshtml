@model IEnumerable<Product>
@using System.Globalization

@functions {
    string FormatPrice(decimal price) =>
        price.ToString("N2", CultureInfo.GetCultureInfo("nb-NO")) + " kr";
}


<h2>Kenan Menu Items</h2>
<a asp-action="Create" asp-controller="Product" class="btn btn-primary">Create New Item</a>

<div class="row g-3">
    @foreach (var product in Model)
    {
        <div class="col-md-4 d-flex">
            <div class="card h-100 w-100">
                <img src="@Url.Content("~/images/" + product.ImageUrl)"
                     class="card-img-top product-img"
                     alt="@product.Description" />

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text flex-grow-1">@product.Description</p>

                    <p class="card-text fw-bold mb-1">@FormatPrice(product.Price)</p>
                    <p class="card-text mb-0">Quantity in Stock: @product.Stock</p>
                </div>
            </div>
        </div>
    }
</div>
